### Limes

ALERT OpenstackLimesFailedScrapes
  IF sum(irate(limes_successful_scrapes[5m])) by (service, region) == 0
  FOR 60m
  LABELS {
    tier = "openstack",
    service = "limes",
    severity = "warning",
    context = "failedscrapes",
    dashboard = "limes-overview"
  }
  ANNOTATIONS {
    summary = "Limes cannot scrape backend",
    description = "Limes cannot scrape backend data from service {{ $labels.service }} in cluster {{ $labels.cluster }} for more than an hour."
  }
